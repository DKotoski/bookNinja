<div id="profile_image">
    <img src="~/Content/img/family.jpg" />

</div>
<div id="profile_hover">
    Full Name:<span id="fullname"></span><br />
    Education:<span id="profile_edu"></span><br />
    Working Experience<span id="profile_work"></span><br />
    Address<span id="prfile_address"></span><br />
    <span>Gallery</span>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $('#profile_image img').on('click', function () {
        $(this).toggleClass('clicked');
        if ($("#profile_hover").css("display") == "none") {
            $("#profile_hover").toggleClass('clicked').fadeIn(1000);
        }
        else {
            $("#profile_hover").css("display", "none");
        }
    });
</script>